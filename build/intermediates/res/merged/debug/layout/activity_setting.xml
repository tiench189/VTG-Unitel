<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_header"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/header_icon"
                android:layout_height="@dimen/header_icon"
                android:src="@drawable/turn_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivBack"
                android:text="BACK"
                android:textColor="@color/info_data"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/setting"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_header"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" >
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:weightSum="3" >

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/ivBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding"
                android:text="@string/change_language"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_header"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/layout_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7E5E6"
                android:padding="@dimen/default_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/english"
                    android:textColor="@color/main_color" />

                <ImageView
                    android:id="@+id/iv_en"
                    android:layout_width="@dimen/tick_size"
                    android:layout_height="@dimen/tick_size"
                    android:src="@drawable/check"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/layout_vi"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7E5E6"
                android:padding="@dimen/default_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/vietnam"
                    android:textColor="@color/main_color" />

                <ImageView
                    android:id="@+id/iv_vi"
                    android:layout_width="@dimen/tick_size"
                    android:layout_height="@dimen/tick_size"
                    android:src="@drawable/check"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/layout_lo"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E7E5E6"
                android:padding="@dimen/default_padding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/lao"
                    android:textColor="@color/main_color" />

                <ImageView
                    android:id="@+id/iv_lo"
                    android:layout_width="@dimen/tick_size"
                    android:layout_height="@dimen/tick_size"
                    android:src="@drawable/check"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>